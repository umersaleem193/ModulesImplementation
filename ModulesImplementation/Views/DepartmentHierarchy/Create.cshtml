@model ModulesImplementation.Models.DepartmentHierarchyViewModel

<h2>Create Department Hierarchy</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DepartmentId" class="control-label">Department Name</label>
        <select asp-for="DepartmentId" class="form-control" asp-items="Model.Departments">
            <option value="">-- Select Department --</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="SubDepartmentId" class="control-label">Sub-Department Name</label>
        <select asp-for="SubDepartmentId" class="form-control" asp-items="Model.SubDepartments">
            <option value="">-- Select Sub-Department --</option>
        </select>
    </div>
    <div class="form-group pt-2">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
