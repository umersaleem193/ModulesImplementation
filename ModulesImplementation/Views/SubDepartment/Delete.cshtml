@model ModulesImplementation.Models.SubDepartment

@{
    ViewData["Title"] = "Delete SubDepartment";
}

<h1>Delete SubDepartment</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>SubDepartment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Logo
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Logo" alt="@Model.Name" style="max-height: 50px;" />
        </dd>
        <dt class="col-sm-2">
            Department
        </dt>
        <dd class="col-sm-10">
            @Model.DepartmentId
        </dd>
    </dl>

    <form asp-controller="SubDepartment" asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-controller="SubDepartment" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
